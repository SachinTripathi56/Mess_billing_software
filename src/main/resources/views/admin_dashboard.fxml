<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.smvdu.mess.controllers.AdminDashboardController"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <top>
        <VBox>
            <HBox style="-fx-background-color: #1e3a5f; -fx-padding: 20;" 
                  alignment="CENTER_LEFT" spacing="20">
                <Label text="ðŸ›ï¸" style="-fx-font-size: 28px;"/>
                <VBox>
                    <Label text="SMVDU Admin Panel" 
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Mess Billing Management System" 
                           style="-fx-text-fill: #b3d9ff; -fx-font-size: 13px;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="adminNameLabel" text="Admin Name" 
                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="designationLabel" text="Designation" 
                           style="-fx-text-fill: #b3d9ff; -fx-font-size: 12px;"/>
                </VBox>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #d32f2f; -fx-text-fill: white; 
                               -fx-font-size: 13px; -fx-padding: 10 20; -fx-cursor: hand; 
                               -fx-background-radius: 5;"/>
            </HBox>
            
            <Separator style="-fx-background-color: #ccc;"/>
            
            <HBox style="-fx-background-color: white; -fx-padding: 15 30;" alignment="CENTER_LEFT">
                <Label text="All Hostels Overview" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Current Month Bills" 
                       style="-fx-font-size: 13px; -fx-text-fill: #666;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" 
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
                <FlowPane fx:id="hostelsContainer" 
                         hgap="25" vgap="25" 
                         alignment="CENTER"
                         prefWrapLength="1200"/>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
