<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.smvdu.mess.controllers.StudentsController"
            styleClass="page-bg">
    
    <top>
        <VBox spacing="20">
            <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
                <padding><Insets top="15" right="30" bottom="15" left="30"/></padding>
                
                <Button text="â† Back" onAction="#goBack" styleClass="back-button"/>
                <Label text="Student Details" styleClass="page-title"/>
                <Label fx:id="hostelLabel" styleClass="header-subtitle"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label fx:id="totalLabel" styleClass="total-label"/>
            </HBox>
            
            <HBox alignment="CENTER" spacing="20">
                <padding><Insets left="30" right="30"/></padding>
                <TextField fx:id="searchField" promptText="ðŸ” Search by name or entry number..." 
                          styleClass="search-field" prefWidth="400"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox>
            <padding><Insets top="20" right="30" bottom="30" left="30"/></padding>
            
            <TableView fx:id="studentsTable" styleClass="students-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="entryNumberCol" text="Entry Number" prefWidth="150"/>
                    <TableColumn fx:id="nameCol" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="roomCol" text="Room" prefWidth="100"/>
                    <TableColumn fx:id="messDaysCol" text="Mess Days" prefWidth="100"/>
                    <TableColumn fx:id="absentDaysCol" text="Absent Days" prefWidth="100"/>
                    <TableColumn fx:id="actionCol" text="Action" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
